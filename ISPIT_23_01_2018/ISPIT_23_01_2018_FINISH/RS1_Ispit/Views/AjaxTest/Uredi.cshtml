@model RS1_Ispit_asp.net_core.ViewModels.AjaxTestUrediVM
@{ 
    var modaliteti = ViewBag.modaliteti as List<SelectListItem>;
}

    <h2>Evidentiranje rezultata</h2>
<form ajax-poziv="da" ajax-rezultat="ajaxDiv" action="/AjaxTest/Uredi">
    <table>
        <tr><td>Pretraga</td>
       <td>@Model.Pretraga</td></tr>
        @if (Model.VrstaVr == "Modalitet")
        {
            <tr><td>Vrijednost</td>
            <td>@Html.DropDownListFor(x=>x.ModalitetId,modaliteti,"Izaberite vrijednost")</td></tr>
        }
        else
        {
        <tr><td>Izmjerena vrijednost</td>
        <td><input asp-for="@Model.NumerickaVrijednost"/></td></tr>
        }
    <tr><td><input asp-for="@Model.RezultatId" hidden /></td></tr>
        <tr><td><input type="submit" value="Snimi" class="btn btn-primary"/></td></tr>
    </table>
</form>