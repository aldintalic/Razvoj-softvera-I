@model List<RS1_Ispit_asp.net_core.ViewModels.UputnicaIndexVM>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-bordered">
    <thead>
        <tr><td colspan="5" style="text-align:center;"><h2>Prikaz evidentiranih uputnica</h2></td></tr>
        <tr>
            <th>Uputio</th>
            <th>Pacijent</th>
            <th>Vrsta pretrage</th>
            <th>Datum evidentiranja rezultata pretrage</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var datum = @item.DatumEvidentiranja!=null? @item.DatumEvidentiranja.Substring(0,10): "(nema rezultata)";
        
            <tr>
            <td>@item.Uputio</td>
            <td>@item.Pacijent</td>
            <td>@item.VrstaPretrage</td>
            <td>@datum</td>
            <td><a href="/Uputnica/Detalji/@item.UputnicaId" style="text-decoration:none;color:black;cursor:pointer;">Detalji</a></td>
        </tr>
        }

    </tbody>
</table>
<a href="/Uputnica/Dodaj" class="btn btn-primary" >Dodaj</a>
