@model RS1_Ispit_asp.net_core.ViewModels.OdrzanaNastavaUrediVM
@{
    ViewData["Title"] = "Uredi";
}

<h2>Uredi</h2>

<form action="/OdrzanaNastava/Uredi" method="post">
    <table>
        <tr>
            <td><label>Datum</label></td>
            <td><input asp-for="Datum" readonly/></td>
        </tr>
        <tr>
            <td><label>Predmet</label></td>
            <td><input asp-for="Predmet" readonly/></td>
        </tr>
        <tr>
            <td><label asp-for="Napomena"></label></td>
            <td><input asp-for="Napomena"/></td>
        </tr>
        <tr>
            <td><input asp-for="MaturskiIspitId" hidden/></td>
            <td>
                <input type="submit" value="Snimi" class="btn btn-primary" />
            </td>
        </tr>
    </table>
</form>

<div id="ajaxDiv" style="border:1px solid black;padding:5px">

</div>


<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/AjaxTest/Prikazi/@Model.MaturskiIspitId",
            success: function (data) {
                $("#ajaxDiv").html(data);
            }
        });
    });
</script>