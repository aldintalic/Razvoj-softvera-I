@model RS1_Ispit_asp.net_core.ViewModels.OdrzanaNastavaDodajVM
@{
    ViewData["Title"] = "Dodaj";
    var predmeti = ViewBag.predmeti as List<SelectListItem>;
    var skole = ViewBag.skole as List<SelectListItem>;

}

<h2>Dodaj</h2>

<form action="/OdrzanaNastava/Dodaj" method="post">
    <table>
        <tr>
            <td><label>Skola</label></td>
            <td>@Html.DropDownListFor(x => x.SkolaId, skole, "Izaberite skolu:")</td>
        </tr>
        <tr>
            <td><label>Nastavnik</label></td>
            <td>@Html.DisplayTextFor(x => x.Nastavnik)</td>
        </tr>
        <tr>
            <td><label>Skolska godina</label></td>
            <td>@Html.DisplayTextFor(x => x.SkolskaGodina)</td>
        </tr>
        <tr>
            <td><label asp-for="Datum"></label></td>
            <td><input asp-for="Datum" /></td>
        </tr>
        <tr>
            <td><label>Predmet</label></td>
            <td>@Html.DropDownListFor(x => x.PredajePredmetId, predmeti, "Izaberite predmet:")</td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Snimi" class="btn btn-primary"/>
            </td>
        </tr>
    </table>
</form>
