@model RS1_Ispit_asp.net_core.ViewModels.OdrzanaNastavaEditVM

@{
    ViewData["Title"] = "Edit";
}

<h2>Editovanje casa</h2>

<form action="/OdrzanaNastava/Edit" method="post">
    <table>
        <tr>
            <td><label>Datum</label></td>
            <td><input asp-for="DatumOdrzanogCasa" readonly /></td>
        </tr>

        <tr>
            <td><label>Odjeljenje</label></td>
            <td><input asp-for="Odjeljenje" readonly /></td>
        </tr>

        <tr>
            <td><label>Sadrzaj casa</label></td>
            <td>@Html.TextAreaFor(x => x.SadrzajCasa)</td>
        </tr>
        <tr>
            <td>
                <input asp-for="OdrzanCasId" hidden/>
            </td>
        </tr>
        <tr>
            <td>
                <input value="Snimi" type="submit" class="btn btn-primary" />
            </td>
        </tr>

    </table>
</form>

<div id="ajaxDiv" style="border:1px solid black;padding:5px">

</div>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/AjaxTest/Prikazi/@Model.OdrzanCasId",
            success: function (data) {
                $("#ajaxDiv").html(data);
            }
        });
    });
</script>
