@model RS1_Ispit_asp.net_core.ViewModels.OdrzanaNastavaDodajVM
@{
    ViewData["Title"] = "Dodaj";
    var predmeti = ViewBag.predmeti as List<SelectListItem>;
}

<h2>Dodavanje novog casa</h2>

<form action="/OdrzanaNastava/Dodaj" method="post">
    <table>
        <tr>
            <td><label>Nastavnik</label> </td>
            <td><input asp-for="Nastavnik" readonly/></td>
        </tr>
        <tr>
            <td><label asp-for="DatumOdrzanogCasa"></label> </td>
            <td><input asp-for="DatumOdrzanogCasa" /></td>
        </tr>
        <tr>
            <td><label>Odjeljenje/Predmet</label> </td>
            <td>@Html.DropDownListFor(x=>x.PredajePredmetId, predmeti, "Izaberite odjeljenje/predmet")</td>
        </tr>
        <tr>
            <td><input asp-for="NastavnikId" hidden/></td>
        </tr>
        <tr>
            <td>
                <input type="submit" class="btn btn-primary" value="Snimi"/>
            </td>
        </tr>
    </table>

</form>

