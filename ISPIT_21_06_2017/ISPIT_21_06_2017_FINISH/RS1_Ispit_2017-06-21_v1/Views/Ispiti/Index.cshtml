@model List<RS1_Ispit_2017_06_21_v1.ViewModels.MaturskiIspitPrikazVM>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table table-bordered">
    <thead>
        <tr><td style="text-align:center" colspan="5"><h4>Prikaz evidentiranih maturskih ispita</h4></td></tr>
        <tr><th>Datum</th>
        <th>Odjeljenje</th>
        <th>Ispitivač</th>
        <th>Prosječni bodovi</th>
        <th>Akcija</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Datum</td>
                <td>@item.Odjeljenje</td>
                <td>@item.Ispitivac</td>
                <td>@item.ProsjecniBodovi</td>
                <td><a href="/Ispiti/Detalji/@item.Id" class="btn btn-default">Detalji</a></td>
            </tr>

        }
    </tbody>

</table>

<a asp-controller="Ispiti" asp-action="Dodaj" class="btn btn-primary">Dodaj</a>
